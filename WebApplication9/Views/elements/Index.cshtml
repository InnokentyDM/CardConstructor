@model IEnumerable<WebApplication9.Models.elements>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<script>

    $(document).ready(function () {
        var arr = [];
        var max_width = 400;
        arr = document.getElementsByClassName('images');
        for (var i = 0; i < arr.length; i++)
        {
            if (arr[i].width > max_width)
                {
                var factor = arr[i].width / max_width;
                var actHeight = arr[i].height / factor;
                arr[i].width = max_width;
                arr[i].height = actHeight;
            }
        }

    });
</script>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ELEMENTS_TYPES.TYPE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ITEM_TYPE.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.layout.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.path)*@
            <img src="@Url.Content(item.path)" alt="Image" class="images"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ELEMENTS_TYPES.TYPE_NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ITEM_TYPE.NAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.layout.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
