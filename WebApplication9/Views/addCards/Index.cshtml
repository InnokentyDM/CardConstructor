@model IEnumerable<WebApplication9.Models.cards>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/js/Application.js")

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ITEM_TYPE.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.layout.width)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <input type="hidden" id="@("label"+item.Id)" class="hiddenId" value="@Html.DisplayFor(modelItem => item.image)" />
            <td>
                <canvas id="@Html.DisplayFor(modelItem => item.Id)" class="preview" width="400px" height="300px"></canvas>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUsers.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ITEM_TYPE.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.layout.width)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "@Viewbag.deleteStyle" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
