@model WebApplication9.Models.LayoutViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@section Scripts{

    <script type="text/javascript">
        $('#upload').change(function (e) {
            if (this.files && this.files[0])
            {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview').attr('src', e.target.result);
                }

                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
}




<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>layout</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.layout.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ImageUpload, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ImageUpload, new { type = "file", id = "upload" })
                @Html.ValidationMessageFor(model => model.ImageUpload)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.layout.ITEM_TYPE_ID, "ITEM_TYPE_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.layout.ITEM_TYPE_ID, (SelectList)ViewBag.ITEM_TYPE_ID, String.Empty)
                @Html.ValidationMessageFor(model => model.layout.ITEM_TYPE_ID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.layout.width, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.layout.width)
                @Html.ValidationMessageFor(model => model.layout.width)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.layout.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.layout.name)
                @Html.ValidationMessageFor(model => model.layout.name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.layout.height, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.layout.height)
                @Html.ValidationMessageFor(model => model.layout.height)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Предпросмотр", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img id="preview" src="@Model.layout.Image" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    </form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
