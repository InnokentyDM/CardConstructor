@model IEnumerable<WebApplication9.Models.application>

@Scripts.Render("~/js/Application.js")

<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayName("#")
        </th>
        <th>
            @Html.DisplayName("Макет")
        </th>
        <th>
            @Html.DisplayName("Пользователь")
        </th>
        <th>
            @Html.DisplayName("Дата заявки")
        </th>
        <th>
            @Html.DisplayName("Дата окончания")
        </th>
        <th>
            @Html.DisplayName("Статус производства")
        </th>
        <th>
            @Html.DisplayName("Колличество")
        </th>
        <th>
            @Html.DisplayName("Цена")
        </th>

        <th>
            @Html.DisplayName("Материал")
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <img src="@Url.Content(item.cards.preview)" alt="Image" class="images" />
            </td>
            @if (item.cards.preview_2 != null)
            {
            <td>
                <img src="@Url.Content(item.cards.preview_2)" alt="Image" class="images" />
            </td>
            }
            <td>
                @Html.ActionLink(item.AspNetUsers.UserName, "../AspNetUsers/Details", new { id = item.AspNetUsers.Id })
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.insertionDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.finishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COUNT.COUNT_VALUE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.summ)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.materials.description)
            </td>
            <td>
                @Html.ActionLink("User", "UserInfo", new { id = item.Id }) |
                @Html.ActionLink("UpdateStatus", "UpdateStatus", "applications", new { id = item.Id, status = ViewContext.RouteData.Values["action"].ToString() }, new { @style = "@Viewbag.deleteStyle" }) |
                @Html.ActionLink("Details", "../applications/Details", new { id = item.Id })

            </td>
        </tr>
    }
</table>

